<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sensio_framework_extra.controller.listener" class="Sensio\Bundle\FrameworkExtraBundle\EventListener\ControllerListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="annotation_reader" />
        </service>

        <service id="sensio_framework_extra.argument_options.listener" class="Sensio\Bundle\FrameworkExtraBundle\EventListener\ControllerArgumentOptionsListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="argument_metadata_factory" on-invalid="null" />
            <argument type="collection" />
        </service>
    </services>
</container>
